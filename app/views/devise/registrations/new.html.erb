<h2>Rejestracja</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: "Imię: " %>
    <%= f.input :email, required: true, label: "E-mail: "  %>
    <%= f.input :password, required: true, label: "Hasło: ", hint: ("minimum #{@minimum_password_length} znaków" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Potwierdź hasło", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zarejestruj się" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
