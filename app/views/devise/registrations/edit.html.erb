<h2>Edytuj swoje dane</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, label: "Imię: ", autofocus: true %>
    <%= f.input :email, required: true, label: "E-mail: " %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Nowe hasło: ",  autocomplete: "off", hint: "zostaw to pole puste, jeżeli nie chcesz zmieniać hasła", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, label: "Hasło: ", hint: "podaj hasło, aby wprowadzić zmiany", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zaktualizuj" %>
  </div>
<% end %>
<br/>
<h3>Usuń konto</h3>

<p>Żegnaj psi-jacielu! <%= link_to "Usuń moje konto", registration_path(resource_name), data: { confirm: "Jesteś pewien?" }, method: :delete %></p>

<%= link_to "Wróć", :back %>
